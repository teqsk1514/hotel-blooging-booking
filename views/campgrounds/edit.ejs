<% include ../partials/header %>
<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 style="text-align:center">Edit
                <%= hotel.name %>
            </h1>
            <div style="width:30%; margin: 25px auto;">
                <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="exampleInputName2">Name</label>
                        <input class="form-control" type="text" name="hotel[name]" value="<%= hotel.name %>" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName2">Price</label>
                        <input class="form-control" type="number" name="hotel[price]" value="<%=hotel.price %>" min="10"
                            step="100" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName2">Image</label>
                        <input class="form-control" type="text" name="hotel[image]" value="<%= hotel.image %>" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName2">Description</label>
                        <textarea rows="6" class="form-control" type="text" name="hotel[description]" value="<%= hotel.description %>"><%= hotel.description %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-raised btn-lg btn-block">Submit!</button>
                    </div>
                    <a class="btn btn-raised btn-secondary" href="/hotels/<%= hotel._id %>">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>