<% include ../partials/header %>
<div style="margin-bottom:2rem;" class="container">
    <div class="card">
        <div class="card-body">
            <h1 style="text-align:center">Add a New Hotel</h1>
            <div style="width:30%; margin: 25px auto;">
                <form action="/hotels" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="price" min="10" step="100" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url" />
                    </div>
                    <div class="form-group">
                        <textarea rows="6" class="form-control" type="text" name="description" placeholder="description"></textarea>
                    </div>
                    <div class="form-group">
                        <!-- <button type="button" class="btn btn-raised btn-secondary" data-toggle="snackbar" data-content="Hotel Added Succesfully">
                            Submit
                        </button> -->
                        <button class="btn btn-raised btn-success">Submit</button>
                        <a class="btn btn-raised btn-secondary" href="/hotels">Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>