<% include ../partials/header %>
<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 style="text-align:center">Edit Comment</h1>
            <div style="width:30%; margin: 25px auto;">
                <form action="/hotels/<%= hotel_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input required class="form-control" type="text" name="comment[text]" value="<%=comment.text %>" />
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-raised btn-success btn-block">Submit!</button>
                    </div>
                    <a class="btn btn-raised btn-secondary" href="/hotels/<%= hotel_id %>">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>