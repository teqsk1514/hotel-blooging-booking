<% include ../partials/header %>
<div class="container">
    <div class="card">
        <h1 style="text-align:center">Add a New Comment to
            <%=hotel.name %>
        </h1>
        <div class="row">
            <div class="col-12">
                <div class="container">
                    <form action="/hotels/<%= hotel._id %>/comments" method="POST">
                        <!-- <div class="form-group">
                            <input required class="form-control" type="text" name="comment[text]" placeholder="Comments" />
                        </div> -->
                        <div class="form-group">
                            <label for="formGroupExampleInput" class="bmd-label-floating">New Comments</label>
                            <input name="comment[text]" required type="text" class="form-control" id="formGroupExampleInput">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-raised btn-success btn-block">Submit!</button>
                        </div>
                        <a class="btn btn-raised btn-secondary" href="/hotels/<%= hotel._id %>">Go Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>